{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es2016",
        "lib": ["dom", "es2016", "es2017"],
        "strict": true,
        "esModuleInterop": false,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "jsx": "react",

        "baseUrl": "./",
        "paths": {
            "@game/*": ["./src/*"],
            "@models/*": ["./src/models/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["build", "dist", "node_modules"]
}
